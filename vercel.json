{
    "buildCommand": "npm run build",
    "outputDirectory": "public",
    "routes": [
        {
            "handle": "filesystem"
        },
        {
            "src": "/img/(.*)",
            "headers": {
                "cache-control": "public, max-age=2592000, immutable"
            }
        },
        {
            "src": "/(.*)",
            "status": 404,
            "dest": "/index.html"
        }
    ]
}
